#include <iostream>

using std::cout;
using std::endl;
using std::cin;

struct_Person
{
   int age;
   char name[20];
   char personid[20];
};

typedef struct_Person Person;

void ShowData(Person p)
{
   cout<<"****** 개인 정보 출력 ********"<<endl;
   cout<<"이      름 : " <<p.name<<endl;
   cout<<"주민번호 : " <<p.personid<<endl;
   cout<<"나      이 : " <<p.age<<endl;
}

int main(void)
{
   Person man;

   cout<<"이      름 :";
   cin>>man.name;
   cout<<"나      이 :";
   cin>>man.age;
   cout<<"주민번호 :";
   cin<<man.personid;

   showData(man);
   return 0;
}
 



